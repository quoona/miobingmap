@model MioMap.Models.WaterClock

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>WaterClock</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Lat" class="control-label"></label>
                <input asp-for="Lat" class="form-control" />
                <span asp-validation-for="Lat" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Long" class="control-label"></label>
                <input asp-for="Long" class="form-control" />
                <span asp-validation-for="Long" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="InfoBoxTitle" class="control-label"></label>
                <input asp-for="InfoBoxTitle" class="form-control" />
                <span asp-validation-for="InfoBoxTitle" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="InfoBoxDescription" class="control-label"></label>
                <input asp-for="InfoBoxDescription" class="form-control" />
                <span asp-validation-for="InfoBoxDescription" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Address" class="control-label"></label>
                <input asp-for="Address" class="form-control" />
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>
            @{
                var waterClocks = ViewData["ListWaterClock"] as List<WaterClock>;
                var options = waterClocks.Select(wc => new SelectListItem { Value = wc.Id.ToString(), Text = wc.Title }).ToList();
            }

            <div class="form-group">
                <label asp-for="InWaterClock" class="control-label"></label>
                <select id="inWaterClockSelect" class="form-control" multiple>
                    @foreach (var option in options)
                    {
                        <option value="@option.Value">@option.Text</option>
                    }
                </select>
                <input type="hidden" asp-for="InWaterClock" id="inWaterClockHidden" />
            </div>

            <div class="form-group">
                <label asp-for="OutWaterClock" class="control-label"></label>
                <select id="outWaterClockSelect" class="form-control" multiple>
                    @foreach (var option in options)
                    {
                        <option value="@option.Value">@option.Text</option>
                    }
                </select>
                <input type="hidden" asp-for="OutWaterClock" id="outWaterClockHidden" />
            </div>
            <div class="form-group">
                <label asp-for="WaterClockStatus" class="control-label"></label>
                <input asp-for="WaterClockStatus" class="form-control" />
                <span asp-validation-for="WaterClockStatus" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>


        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script>
        $(document).ready(function () {
            $('form').on('submit', function () {
                var inWaterClockIds = $('#inWaterClockSelect').val().join(',');
                $('#inWaterClockHidden').val(inWaterClockIds);

                var outWaterClockIds = $('#outWaterClockSelect').val().join(',');
                $('#outWaterClockHidden').val(outWaterClockIds);
            });
        });
    </script>
}
