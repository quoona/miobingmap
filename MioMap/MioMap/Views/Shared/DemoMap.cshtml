            alert("Van này không thuộc ống nào!")
            return
        }

        for (let poly of polylines) {
            const _locations = poly?.geometry?.map(item => {
                return new Microsoft.Maps.Location(item?.lat, item?.long)
            })

            // var  clickLocation = _locations[0];
